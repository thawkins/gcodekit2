import { ThemeProvider, ThemedRectangle, ThemedText, ThemedSecondaryText } from "../theme/mod.slint";
import { ComboBox } from "std-widgets.slint";

export component SettingsPanel inherits Rectangle {
    background: ThemeProvider.colors.background;
    
    // Callback to Rust for theme changes
    callback set-theme(string);
    
    // Connection widget callbacks
    callback refresh-ports();
    callback connect(string);
    callback disconnect();
    
    // Properties for port data
    in property <[string]> available-ports;
    in property <string> selected-port;
    in property <bool> is-connected;
    in property <string> connection-status;

    VerticalLayout {
        padding: 20px;
        spacing: 15px;

        // Settings title
        ThemedText {
            text: "Settings";
            font-size: 18px;
            font-weight: 700;
        }

        // Theme settings section
        ThemedRectangle {
            height: auto;
            border-radius: 4px;

            VerticalLayout {
                padding: 15px;
                spacing: 10px;

                ThemedText {
                    text: "Theme Settings";
                    font-size: 14px;
                    font-weight: 700;
                }

                // Current theme indicator
                HorizontalLayout {
                    spacing: 10px;

                    ThemedText {
                        text: "Current Theme:";
                        width: 120px;
                    }

                    ThemedText {
                        text: ThemeProvider.mode;
                        color: ThemeProvider.colors.accent;
                        font-weight: 700;
                    }
                }

                // Theme selection dropdown area
                HorizontalLayout {
                    spacing: 10px;

                    ThemedText {
                        text: "Theme Mode:";
                        width: 120px;
                    }

                    // Light Theme button
                    Rectangle {
                        background: ThemeProvider.mode == "light" ? ThemeProvider.colors.button : ThemeProvider.colors.panel;
                        width: 100px;
                        height: 32px;
                        border-radius: 3px;
                        
                        ThemedText {
                            text: "â˜€ Light";
                        }
                        
                        TouchArea {
                            clicked => {
                                root.set-theme("light");
                            }
                        }
                    }

                    // Dark Theme button
                    Rectangle {
                        background: ThemeProvider.mode == "dark" ? ThemeProvider.colors.button : ThemeProvider.colors.panel;
                        width: 100px;
                        height: 32px;
                        border-radius: 3px;
                        
                        ThemedText {
                            text: "ðŸŒ™ Dark";
                        }
                        
                        TouchArea {
                            clicked => {
                                root.set-theme("dark");
                            }
                        }
                    }

                    // Auto-detect (System) button
                    Rectangle {
                        background: ThemeProvider.colors.panel;
                        width: 100px;
                        height: 32px;
                        border-radius: 3px;
                        
                        ThemedText {
                            text: "Auto (System)";
                            font-size: 10px;
                        }
                        
                        TouchArea {
                            clicked => {
                                root.set-theme("system");
                            }
                        }
                    }
                }

                // Theme preview section
                ThemedText {
                    text: "Theme Preview:";
                    font-size: 12px;
                    font-weight: 700;
                }

                // Color palette preview
                HorizontalLayout {
                    spacing: 5px;

                    Rectangle {
                        background: ThemeProvider.colors.status-green;
                        width: 30px;
                        height: 30px;
                        border-radius: 2px;
                    }

                    Rectangle {
                        background: ThemeProvider.colors.status-blue;
                        width: 30px;
                        height: 30px;
                        border-radius: 2px;
                    }

                    Rectangle {
                        background: ThemeProvider.colors.status-red;
                        width: 30px;
                        height: 30px;
                        border-radius: 2px;
                    }

                    Rectangle {
                        background: ThemeProvider.colors.status-yellow;
                        width: 30px;
                        height: 30px;
                        border-radius: 2px;
                    }

                    Rectangle {
                        background: ThemeProvider.colors.button;
                        width: 30px;
                        height: 30px;
                        border-radius: 2px;
                    }

                    Rectangle {
                        background: ThemeProvider.colors.accent;
                        width: 30px;
                        height: 30px;
                        border-radius: 2px;
                    }
                }
            }
        }

        // Appearance section
        ThemedRectangle {
            height: auto;
            border-radius: 4px;

            VerticalLayout {
                padding: 15px;
                spacing: 10px;

                ThemedText {
                    text: "Appearance";
                    font-size: 14px;
                    font-weight: 700;
                }

                HorizontalLayout {
                    spacing: 10px;

                    ThemedText {
                        text: "UI Scale:";
                        width: 120px;
                    }

                    ThemedText {
                        text: "100%";
                        color: ThemeProvider.colors.accent;
                    }
                }

                HorizontalLayout {
                    spacing: 10px;

                    ThemedText {
                        text: "Animations:";
                        width: 120px;
                    }

                    ThemedText {
                        text: "Enabled";
                        color: ThemeProvider.colors.status-green;
                    }
                }

                HorizontalLayout {
                    spacing: 10px;

                    ThemedText {
                        text: "Auto Follow System:";
                        width: 120px;
                    }

                    ThemedText {
                        text: "Enabled";
                        color: ThemeProvider.colors.status-green;
                    }
                }
            }
        }

        // Device settings section
        ThemedRectangle {
            height: auto;
            border-radius: 4px;

            VerticalLayout {
                padding: 15px;
                spacing: 10px;

                ThemedText {
                    text: "Device Connection";
                    font-size: 14px;
                    font-weight: 700;
                }

                // Connection Status
                HorizontalLayout {
                    spacing: 10px;

                    ThemedText {
                        text: "Status:";
                        width: 120px;
                    }

                    ThemedText {
                        text: root.connection-status;
                        color: root.is-connected ? ThemeProvider.colors.status-green : ThemeProvider.colors.status-red;
                    }
                }

                // Serial Port ComboBox
                HorizontalLayout {
                    spacing: 10px;
                    alignment: center;

                    ThemedText {
                        text: "Serial Port:";
                        width: 120px;
                    }

                    ComboBox {
                        model: root.available-ports;
                        selected-value <=> root.selected-port;
                        width: 200px;
                    }

                    // Refresh button
                    Rectangle {
                        background: ThemeProvider.colors.button;
                        width: 80px;
                        height: 32px;
                        border-radius: 3px;
                        
                        ThemedText {
                            text: "Refresh";
                            font-size: 11px;
                        }
                        
                        TouchArea {
                            clicked => {
                                root.refresh-ports();
                            }
                        }
                    }
                }

                // Connect/Disconnect buttons
                HorizontalLayout {
                    spacing: 10px;

                    Rectangle {
                        background: root.is-connected ? ThemeProvider.colors.status-red : ThemeProvider.colors.status-green;
                        width: 150px;
                        height: 32px;
                        border-radius: 3px;
                        
                        ThemedText {
                            text: root.is-connected ? "Disconnect" : "Connect";
                        }
                        
                        TouchArea {
                            clicked => {
                                if (root.is-connected) {
                                    root.disconnect();
                                } else {
                                    root.connect(root.selected-port);
                                }
                            }
                        }
                    }
                }

                HorizontalLayout {
                    spacing: 10px;

                    ThemedText {
                        text: "Baud Rate:";
                        width: 120px;
                    }

                    ThemedText {
                        text: "115200";
                        color: ThemeProvider.colors.button;
                    }
                }
            }
        }

        Rectangle {
            // Spacer
            height: 1%;
        }

        // Action buttons
        HorizontalLayout {
            alignment: end;
            spacing: 10px;

            Rectangle {
                background: ThemeProvider.colors.button;
                width: 150px;
                height: 32px;
                border-radius: 3px;
                
                ThemedText {
                    text: "Reset to Defaults";
                }
            }

            Rectangle {
                background: ThemeProvider.colors.button;
                width: 100px;
                height: 32px;
                border-radius: 3px;
                
                ThemedText {
                    text: "Close";
                }
            }
        }
    }
}
