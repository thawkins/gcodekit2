        HorizontalLayout {
            alignment: end;
            spacing: 10px;

            Rectangle {
                background: ThemeProvider.colors.button;
                width: 150px;
                height: 32px;
                border-radius: 3px;
                
                ThemedText {
                    text: "Reset to Defaults";
                }
            }

            Rectangle {
                background: ThemeProvider.colors.button;
                width: 100px;
                height: 32px;
                border-radius: 3px;
                
                ThemedText {
                    text: "Close";
